.contact-us.pl-5.pr-5
  .contact-us--container.row.middle-xs
    .col-lg-6.col-md-6.col-sm-6.col-xs-12
      p.contact-us--subtitle.text-family--titles.text-transform--uppercase 
        i.fas.fa-phone.pr-2
        span Contactanos
      h1.contact-us--title.text-family--titles.text-transform--uppercase Trabajemos 
      h1.contact-us--title.text-family--titles.text-transform--uppercase Juntos
    .col-lg-6.col-md-6.col-sm-6.col-xs-12
      .contact-us--card
        form#contact-form
          .form-row
            .col-md-12.margin--bottom-large.form-group
              i.fas.fa-user
              input.form-control#name(type='text' required='')
              span.form-control-placeholder.text-color_white(for='name') Nombre
            .col-md-12.margin--bottom-large.form-group
              i.fas.fa-phone
              input.form-control#phone(type='number' required='')
              span.form-control-placeholder.text-color_white(for='phone') Tel√©fono
            .col-md-12.margin--bottom-large.form-group
              i.fas.fa-envelope
              input.form-control#email(type='email' data-parsley-trigger="change" required='')
              span.form-control-placeholder.text-color_white(for='email') Email
          button.btn.btn__color-secondary.mt-4 Enviar
